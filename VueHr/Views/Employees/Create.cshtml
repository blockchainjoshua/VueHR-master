@model VueHr.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<head>
    <link href="~/css/create-employee.css" rel="stylesheet" />

</head>
<h1>Employee Registration</h1>

<div class="col-lg-12 col-md-12 col-sm-12">
    <form asp-action="Create">
        <div class="tab">
            <h4>General Information</h4>
            <hr />
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label asp-for="BiometricId" class="control-label"></label>
                        <input asp-for="BiometricId" class="form-control" />
                        <span asp-validation-for="BiometricId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label asp-for="Firstname" class="control-label"></label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label asp-for="Middlename" class="control-label"></label>
                        <input asp-for="Middlename" class="form-control" />
                        <span asp-validation-for="Middlename" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="form-group">
                        <label asp-for="Lastname" class="control-label"></label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="CurrentAddress" class="control-label"></label>
                        <input asp-for="CurrentAddress" class="form-control" />
                        <span asp-validation-for="CurrentAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="PermanentAddress" class="control-label"></label>
                        <input asp-for="PermanentAddress" class="form-control" />
                        <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="PlaceOfBirth" class="control-label"></label>
                        <input asp-for="PlaceOfBirth" class="form-control" />
                        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="Religion" class="control-label"></label>
                        <input asp-for="Religion" class="form-control" />
                        <span asp-validation-for="Religion" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="CivilStatus" class="control-label"></label>
                        <input asp-for="CivilStatus" class="form-control" />
                        <span asp-validation-for="CivilStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="form-group">
                        <label asp-for="Skin" class="control-label"></label>
                        <input asp-for="Skin" class="form-control" />
                        <span asp-validation-for="Skin" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1">

                    <div class="form-group">
                        <label asp-for="BloodType" class="control-label"></label>
                        <input asp-for="BloodType" class="form-control" />
                        <span asp-validation-for="BloodType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1">
                    <div class="form-group">
                        <label asp-for="Weight" class="control-label"></label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1">
                    <div class="form-group">
                        <label asp-for="Height" class="control-label"></label>
                        <input asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab">
            <h4>Educational Attainment</h4>
            <hr />
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].GradSchool" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].GradSchool" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].GradSchool" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].GradSchoolCourse" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].GradSchoolCourse" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].GradSchoolCourse" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].GradSchoolGradDate" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].GradSchoolGradDate" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].GradSchoolGradDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].College" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].College" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].College" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].CollegeCourse" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].CollegeCourse" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].CollegeCourse" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].CollegeGradDate" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].CollegeGradDate" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].CollegeGradDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].Vocational" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].Vocational" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].Vocational" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].VocationalGradDate" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].VocationalGradDate" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].VocationalGradDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].Secondary" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].Secondary" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].Secondary" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].SecondaryGradDate" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].SecondaryGradDate" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].SecondaryGradDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].Primary" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].Primary" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].Primary" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="EmployeeEducationalBackground[0].PrimaryGradDate" class="control-label"></label>
                        <input asp-for="EmployeeEducationalBackground[0].PrimaryGradDate" class="form-control" />
                        <span asp-validation-for="EmployeeEducationalBackground[0].PrimaryGradDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab">
            <h4>Work Experience</h4>
            <hr />
            <div class="table table-responsive">
                <table class="table  table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Company</td>
                            <td>Position</td>
                            <td>From</td>
                            <td>To</td>
                            <td>Reason For Leaving</td>
                            <td>Contact Number</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody id="TextBoxContainer">
                        @Html.EditorFor(model => model.EmployeeWorkBackground)
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="7">
                                <button id="btnAdd" type="button" class="btn btn-primary" data-toggle="tooltip" data-original-title="Add more controls"><i class="glyphicon glyphicon-plus-sign"></i>&nbsp; Add&nbsp;</button>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>


        </div>
        <div class="tab">
            <h4>Reference</h4>
            <hr />
            <div class="table table-responsive">
                <table class="table  table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Company</td>
                            <td>Position</td>
                            <td>Contact Number</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody id="referenceBoxContainer">
                        @Html.EditorFor(model => model.EmployeeReferences)
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="7">
                                <button id="addReference" type="button" class="btn btn-primary" data-toggle="tooltip" data-original-title="Add more controls"><i class="glyphicon glyphicon-plus-sign"></i>&nbsp; Add&nbsp;</button>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>


        </div>
        <div style="overflow:auto;">
            <div style="float:right;">
                <button type="button" id="prevBtn" class="btn btn-primary next-prev" onclick="nextPrev(-1)">Previous</button>
                <button type="button" id="nextBtn" class="btn btn-primary next-prev" onclick="nextPrev(1)">Next</button>
                <button type="submit" value="Create" class="btn btn-primary" id="submitBtn">Submit</button>

            </div>
        </div>
        <!-- Circles which indicates the steps of the form: -->
        <div style="text-align:center;margin-top:40px;">
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="~/js/create-employee.js"></script>